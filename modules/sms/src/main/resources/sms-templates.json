[
    {
        "name":"Clickatell",
		"requires": [
			"username",
			"password",
			"clickatell_api_id",
			"from"
		],
        "outgoing":{
            "msxSmsSize":"160",
            "maxRecipient":"300",
            "millisecondsBetweenMessages":"1",
            "hasAuthentication":"false",
            "request":{
                "type":"POST",
                "urlPath":"http://api.clickatell.com/http/sendmsg",
                "recipientsSeparator":",",
                "bodyParameters":{
                    "mo":"1",
                    "climsgid":"[motechId]",
                    "user":"[username]",
                    "password":"[password]",
                    "api_id":"[api_id]",
                    "from":"[from]",
                    "to":"[recipients]",
                    "text":"[message]"
                }
            },
            "response":{
                "multiLineRecipientResponse": "true",
                "singleRecipientResponse": "true",
                "extractSingleSuccessMessageId":  "^ID: ([0-9a-zA-Z]+)$",
                "extractSingleFailureMessage":  "^ERR: (.*)$",
                "extractSuccessMessageIdAndRecipient": "^ID: ([0-9a-zA-Z]+) To: ([0-9]+)$",
                "extractFailureMessageAndRecipient": "^ERR: (.*) To: ([0-9]+)$"
            }
        },
        "incoming":{
            "messageKey": "text",
            "senderKey": "from",
            "recipientKey": "to",
            "msgIdKey": "moMsgId",
            "timestampKey": "timestamp",
            "response": "Thanks"
        }
    },
    {
        "name":"Voxeo",
		"requires": [
			"username",
			"password",
			"botkey",
			"from"
		],
        "outgoing":{
            "msxSmsSize":"160",
            "millisecondsBetweenMessages":"20000",
            "maxRecipient":"1",
            "hasAuthentication":"true",
            "request":{
                "type":"POST",
                "urlPath":"http://api.messaging.staging.voxeo.net/1.0/messaging",
                "bodyParameters":{
                    "user":"[recipients]",
                    "msg":"[message]",
                    "botkey":"[botkey]",
                    "apimethod":"send",
                    "network":"SMS",
                    "from":"[from]"
                }
            },
            "response":{
                "multiLineRecipientResponse": "false",
                "successResponse":'^<rsp stat="ok">\\W<success msg="[^\\"]*" transactionid="[0-9a-z]*" messageid="[0-9a-z]*"/>\\W</rsp>$',
                "extractSingleSuccessMessageId": '^<rsp stat="ok">\\W<success msg="[^\\"]*" transactionid="[0-9a-z]*" messageid="([0-9a-z]*)"/>\\W</rsp>$',
                "extractSingleFailureMessage": '^<rsp stat="fail">\\W<err msg="([^\\"]*)"/>\\W</rsp>$'
            }
        },
        "incoming":{
        }
    },
    {
        "name":"Twilio",
		"requires": [
			"username",
			"password"
		],
        "outgoing":{
            "msxSmsSize":"160",
            "hasAuthentication":"true",
            "request":{
                "type":"POST",
                "urlPath":"https://api.twilio.com/2010-04-01",
                "maxRecipient":"10",
                "recipientsSeparator":",",
                "millisecondsBetweenMessages":"1",
                "queryParameters":{
                    "user":"",
                    "password":"",
                    "api_id":"",
                    "to":"$recipients",
                    "text":"$message"
                }
            },
            "response":{
                "multiLineRecipientResponse": "false",
                "successResponse":".*\n.*(success msg=\"accepted\").*\n.*"
            }
        },
        "incoming":{
            "messageKey": "$message",
            "senderKey": "$sender",
            "timestampKey": "$time"
        }
    }
]