[
    {
        "name":"Clickatell",
		"requires": [
			"username",
			"password",
			"from",
			"clickatell_api_id"
		],
        "outgoing":{
            "maxRecipient":"300",
            "millisecondsBetweenMessageChunks":"1000",
            "request":{
                "type":"POST",
                "urlPath":"http://api.clickatell.com/http/sendmsg",
                "recipientsSeparator":",",
                "queryParameters":{
                    "mo":"1",
                    "climsgid":"[messageId]",
                    "user":"[username]",
                    "password":"[password]",
                    "api_id":"[api_id]",
                    "from":"[from]",
                    "to":"[recipients]",
                    "text":"[message]"
                }
            },
            "response":{
                "multiLineRecipientResponse": "true",
                "successResponse":  "^ID: [0-9a-zA-Z]+ To: [0-9]+$",
                "successRecipient": "^ID: [0-9a-zA-Z]+ To: ([0-9]+)$",
                "successMessageId": "^ID: ([0-9a-zA-Z]+) To: [0-9]+$",
                "failureRecipient": "^ERR: .* To: ([0-9]+)$",
                "failureMessage": "^ERR: (.*) To: [0-9]+$"
            }
        },
        "incoming":{
            "messageKey": "text",
            "senderKey": "from",
            "recipientKey": "to",
            "msgIdKey": "moMsgId",
            "timestampKey": "timestamp",
            "response": "Thanks"
        }
    },
    {
        "name":"Nuntium",
		"requires": [
			"username",
			"password"
		],
        "outgoing":{
            "request":{
                "type":"POST",
                "urlPath":"http://api.clickatell.com/http/sendmsg",
                "maxRecipient":"10",
                "recipientsSeparator":",",
                "millisecondsBetweenMessageChunks":"0",
                "queryParameters":{
                    "user":"",
                    "password":"",
                    "api_id":"",
                    "to":"$recipients",
                    "text":"$message"
                }
            },
            "response":{
                "multiLineRecipientResponse": "false",
                "successResponse":".*\n.*(success msg=\"accepted\").*\n.*"
            }
        },
        "incoming":{
            "messageKey": "$message",
            "senderKey": "$sender",
            "timestampKey": "$time"
        }
    },
